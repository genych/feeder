{% extends 'base.html.twig' %}

{% block title %} Feeder {% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
        </div>
        {{ render(path('feed')) }}
    {% endif %}
    {% if not app.user %}
        <div class="mb-3">
            <form id="login" method="post" action="{{ path('login') }}">
                <label for="inputEmail">Email</label>
                <input type="email" value="" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <button type="submit"> Log in </button>
            </form>

            <form id="register" method="post" action="{{ path('register') }}">
                <label for="inputEmail">Email</label>
                <input type="email" value="" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <button type="submit"> Register </button>
            </form>
        </div>
    {% endif %}

{% endblock %}

